<% cache parks do %>
  <% if parks.present? %>
    <h2 class="title is-size-5-mobile">Parks</h2>
    <h3 class="subtitle is-size-6-mobile"><%= pluralize_with_delimiter 'park', parks.size %></h3>
    <hr class="hr">
    <table class="table is-fullwidth is-hoverable is-striped">
      <thead>
        <tr>
        <th>Name</th>
        <th>Designation</th>
        <th>Code</th>
        <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'park', collection: parks, as: :park %>
      </tbody>
    </table>
  <% end %>
<% end %>
