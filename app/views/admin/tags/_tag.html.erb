<tr data-controller="tag" data-tag-name="<%= tag.name %>">
<td><%= link_to tag.name, admin_tagged_entries_path(tag.slug) %></td>
<td><%= pluralize(Entry.tagged_with(tag.name).size, 'item') %></td>
<td><%= link_to 'Edit', admin_tag_path(tag.id), 'data-action': 'click->tag#edit' %></td>
<td><%= link_to 'Delete', admin_tag_path(tag.id), 'data-action': 'click->tag#delete' %></td>
</tr>
