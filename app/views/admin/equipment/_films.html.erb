<% cache films do %>
  <% if films.present? %>
    <h2 class="title is-size-5-mobile">Films</h2>
    <h3 class="subtitle is-size-6-mobile"><%= pluralize_with_delimiter 'film', films.size %></h3>
    <hr class="hr">
    <table class="table is-fullwidth is-hoverable is-striped">
      <thead>
        <tr>
        <th>Make</th>
        <th>Type</th>
        <th>Display Name</th>
        <th>Photos</th>
        <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'film', collection: films, as: :film %>
      </tbody>
    </table>
  <% end %>
<% end %>
