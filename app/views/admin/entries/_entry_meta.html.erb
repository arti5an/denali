<div class="field is-grouped is-grouped-multiline">
  <% cache_if entry.is_queued?, [@photoblog, entry] do %>
    <div class="control">
      <div class="tags has-addons">
        <% if entry.is_published? %>
          <span class="tag is-success">Published</span>
          <span class="tag"><%= entry.published_at.strftime('%A, %B %-d, %Y') %></span>
        <% elsif entry.is_queued? %>
          <% if entry.publish_date_for_queued.present? %>
            <span class="tag is-info">Queued</span>
            <span class="tag"><%= entry.publish_date_for_queued.strftime('%A, %B %-d, %Y')%></span>
          <% else %>
            <span class="tag is-info">Queued</span>
          <% end %>
        <% elsif entry.is_draft? %>
          <span class="tag">Draft</span>
        <% end %>
      </div>
    </div>
  <% end %>
  <% cache entry do %>
    <% if entry.photos.count { |p| p.alt_text.blank? } > 0 %>
      <div class="control">
        <div class="tags">
          <span class="tag is-warning">Alt text missing</span>
        </div>
      </div>
    <% end %>

    <% if entry.photos.count { |p| p.focal_x.blank? || p.focal_y.blank?  } > 0 %>
      <div class="control">
        <div class="tags">
          <span class="tag is-warning">Focal point missing</span>
        </div>
      </div>
    <% end %>
    <% if entry.instagram_location.blank? %>
      <div class="control">
        <div class="tags">
          <span class="tag is-warning">Location missing</span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
