<% content_for :meta do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1 class="title is-size-5-mobile">New entry</h1>
<hr class="hr">

<%= form_for([:admin, @entry], html: { multipart: true, 'data-controller': 'entry-form', 'data-entry-form-photo-endpoint': photo_admin_entries_path, 'data-action': 'submit->entry-form#submit' }) do |f| %>
<div class="field is-horizontal">
  <div class="field-label">
    <%= f.label :photos, 'Photos', class: 'label' %>
    <a href="#" class="button" data-action="click->entry-form#addPhoto">
      <span class="icon">
        <i class="fas fa-plus-circle"></i>
      </span>
    </a>
  </div>
  <div class="field-body">
    <div class="field is-extended">
      <div data-target="entry-form.photos">
        <%= render partial: 'photo_fields', locals: { i: 0 } %>
      </div>
    </div>
  </div>
</div>

  <%= render partial: 'entry_fields', locals: { f: f } %>

  <hr class="hr">
  <div class="field is-horizontal">
    <div class="field-label">
    </div>
    <div class="field-body">
      <div class="field">
        <div class="tabs is-toggle is-fullwidth" data-controller="radio-tab">
          <ul>
            <li class="is-active" data-target="radio-tab.tab" data-radio-tab-value="queued" data-action="click->radio-tab#toggle">
              <a>
                <span class="icon is-small"><i class="fas fa-clock" aria-hidden="true"></i></span>
                <span>Queued</span>
              </a>
            </li>
            <li data-target="radio-tab.tab" data-radio-tab-value="draft" data-action="click->radio-tab#toggle">
              <a>
                <span class="icon is-small"><i class="fas fa-pencil-alt" aria-hidden="true"></i></span>
                <span>Draft</span>
              </a>
            </li>
            <li data-target="radio-tab.tab" data-radio-tab-value="published" data-action="click->radio-tab#toggle">
              <a>
                <span class="icon is-small"><i class="fas fa-rocket" aria-hidden="true"></i></span>
                <span>Published</span>
              </a>
            </li>
          </ul>
          <%= f.hidden_field :status, value: 'queued', 'data-target': 'radio-tab.field' %>
        </div>
      </div>
    </div>
  </div>

  <hr class="hr">

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :show_in_map, 'Show in map', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :show_in_map, { checked: true } %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :post_to_facebook, 'Share on Facebook', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :post_to_facebook, { checked: true } %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :post_to_flickr, 'Share on Flickr', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :post_to_flickr, { checked: true } %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :post_to_pinterest, 'Share on Pinterest', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :post_to_pinterest, { checked: true } %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :post_to_tumblr, 'Share on Tumblr', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :post_to_tumblr, { checked: true } %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :post_to_twitter, 'Share on Twitter', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :post_to_twitter, { checked: true } %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control is-expanded">
          <%= f.text_area :tweet_text, placeholder: 'Your tweet…', maxlength: 230, class: 'textarea' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :post_to_instagram, 'Share on Instagram', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :post_to_instagram, { checked: true } %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control is-expanded">
          <%= f.text_area :instagram_text, placeholder: 'Your Instagram caption…', maxlength: 230, class: 'textarea' %>
        </div>
      </div>
    </div>
  </div>

  <hr class="hr">
  <div class="field is-horizontal">
    <div class="field-label">
    </div>
    <div class="field-body">
      <div class="field">
        <div class="buttons is-right">
          <%= link_to 'Cancel', admin_entries_path, data: { confirm: 'Are you sure you want to discard this?' }, class: 'button' %>
          <%= f.submit 'Save entry', class: 'button is-success' %>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: 'tag_datalists', locals: { tags: @tags } %>
<% end %>
