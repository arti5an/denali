<ol class="entry-list">
  <%= render partial: 'entry', object: @entry %>
  <li class="entry">
    <div class="entry__content entry__content--misc">
      <h2>Source Images</h2>
      <p class="entry__help">Tap to download the original, full-size source image.</p>
      <div class="entry__thumbs">
        <% @entry.photos.each do |photo| %>
          <div class="entry__thumb--small"><%= link_to responsive_image_tag(photo, 'admin_share'), photo.original_url %></div>
        <% end %>
      </div>
    </div>
  </li>
  <% if @entry.is_published? %>
  <li class="entry">
    <div class="entry__content entry__content--misc">
      <h2>Buffer</h2>
      <div class="entry__content-buttons">
        <%= button_to 'Send to Facebook', facebook_admin_entry_path(@entry.id), method: :post, class: 'button button--facebook' %>
        <%= button_to 'Send to Instagram', instagram_admin_entry_path(@entry.id), method: :post, class: 'button button--instagram' %>
        <%= button_to 'Send to Twitter', twitter_admin_entry_path(@entry.id), method: :post, class: 'button button--twitter' %>
      </div>
    </div>
  </li>
  <% end %>
  <li class="entry">
    <div class="entry__content entry__content--misc">
      <h2>Instagram</h2>
      <p class="entry__help">Formats images for Instagram’s optimal size and aspect ratio; randomizes Instagram hashtags.</p>
      <div class="entry__thumbs">
        <% @entry.photos.each do |photo| %>
          <div class="entry__thumb--small"><%= image_tag photo.instagram_url, class: 'entry__thumb--small' %></div>
        <% end %>
      </div>
      <form class="form form--no-padding" data-controller="clipboard">
        <textarea class="form__input form__input--textarea-short" readonly="readonly" data-target="clipboard.source"><%= @entry.instagram_caption %></textarea>
        <div class="form__actions form__actions--no-padding">
          <button class="button" data-target="clipboard.button" data-action="click->clipboard#preventDefault">Copy to clipboard</button>
        </div>
      </form>
    </div>
  </li>
  <li class="entry">
    <div class="entry__content entry__content--misc">
      <h2>Markdown</h2>
      <p class="entry__help">Resizes images to 1200px wide; includes the entry’s hashtags and permalink.</p>
      <div class="entry__thumbs">
        <% @entry.photos.each do |photo| %>
          <div class="entry__thumb--small"><%= image_tag photo.url(w: 1200, fm: 'jpg') %></div>
        <% end %>
      </div>
      <form class="form form--no-padding" data-controller="clipboard">
        <textarea class="form__input form__input--textarea-short" readonly="readonly" data-target="clipboard.source"><%= share_markdown @entry %></textarea>
        <div class="form__actions form__actions--no-padding">
          <button class="button" data-target="clipboard.button" data-action="click->clipboard#preventDefault">Copy to clipboard</button>
        </div>
      </form>
    </div>
  </li>
  <li class="entry">
    <div class="entry__content entry__content--misc">
      <h2>Title only</h2>
      <p class="entry__help">Resizes images to 1200px wide; includes just the entry’s title.</p>
      <div class="entry__thumbs">
        <% @entry.photos.each do |photo| %>
          <div class="entry__thumb--small"><%= image_tag photo.url(w: 1200, fm: 'jpg') %></div>
        <% end %>
      </div>
      <form class="form form--no-padding" data-controller="clipboard">
        <input type="text" class="form__input form__input--text form__input--small" readonly="readonly" data-target="clipboard.source" value="<%= share_title @entry %>">
        <div class="form__actions form__actions--no-padding">
          <button class="button" data-target="clipboard.button" data-action="click->clipboard#preventDefault">Copy to clipboard</button>
        </div>
      </form>
    </div>
  </li>
</ol>
