<% content_for :nav do %>
  <%= render partial: 'partials/admin/nav', locals: { active_nav: 'drafts' } %>
<% end %>

<% cache "#{@cache_version}/admin/entries/drafts/#{@photoblog.id}/#{@photoblog.updated_at.to_i}" do %>
  <% if @entries.size == 0 %>
    <p class="content__message">You don’t have any drafts. Why don’t you <a href="<%= new_admin_entry_path %>">write one</a>?</p>
  <% else %>
    <ol class="entry-list">
      <%= render partial: 'entry', collection: @entries %>
    </ol>
  <% end %>
<% end %>
