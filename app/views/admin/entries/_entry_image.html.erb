<% photo = entry.photos&.first %>
<% if photo.present? && photo.width.present? && photo.height.present? %>
  <div class="card-image">
    <a style="<%= "#{css_aspect_ratio(photo)}#{css_gradient_stops(photo)}"  %>" class="image image-container" href="<%= entry.permalink_url %>">
      <%= responsive_image_tag(
        photo: photo,
        srcset: @srcset,
        sizes: @sizes,
        html_options: {
          class: 'is-overlay',
          loading: 'lazy'
        }) %>
    </a>
  </div>
<% end %>

