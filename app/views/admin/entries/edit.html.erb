<% content_for :nav do %>
  <%= render partial: 'partials/admin/nav', locals: { active_nav: nil } %>
<% end %>

<%= form_for([:admin, @entry], html: { multipart: true, class: 'admin-form' }) do |f| %>
  
  <%= render partial: 'entry_fields', locals: { f: f } %>

  <div class="admin-form__photos">
    <%= f.fields_for :photos do |photos_form| %>
    <div class="admin-form__photo">
      <div class="admin-form__fields admin-form__fields--aligned admin-form__fields--hidden">
        <%= photos_form.text_field :source_url, placeholder: 'Enter a URL', autocomplete: 'off', class: 'admin-form__input admin-form__input--small' %>
        <span class="admin-form__fields-separator">or</span>
        <%= link_to 'Add from Dropbox', '#', class: 'button button--default' %>
        <span class="admin-form__fields-separator">or</span>
        <div class="button button--default">
          Upload a file
          <%= photos_form.file_field :source_file, class: 'button__file' %>
        </div>
      </div>
      <div class="admin-form__fields">
        <%= image_tag photos_form.object.url(600), alt: photos_form.object.caption, class: 'admin-form__photo-thumb' %>
        <div class="admin-form__photo-fields">
          <%= photos_form.text_area :caption, placeholder: 'Write the caption of the photo hereâ€¦', class: 'admin-form__input admin-form__input--caption' %>
          <%= link_to 'Delete', '#', class: 'button button--danger admin-form__photo-delete' %>
          <%= photos_form.hidden_field :id %>
          <%= photos_form.hidden_field :position %>
          <%= photos_form.hidden_field :_destroy %>
        </div>
      </div>
    </div>
    <% end %>
    <%= link_to 'Add photo', '#', class: 'button button--default' %>
  </div>

  <div class="admin-form__actions">
    <div class="admin-form__buttons">
      <% if @entry.is_draft? %>
        <%= link_to 'Cancel', drafts_admin_entries_path, data: { confirm: 'Are you sure you want to discard your changes?' }, class: 'button button--danger' %>
      <% elsif @entry.is_queued? %>
        <%= link_to 'Cancel', queued_admin_entries_path, data: { confirm: 'Are you sure you want to discard your changes?' }, class: 'button button--danger' %>
      <% else %>
        <%= link_to 'Cancel', admin_entries_path, data: { confirm: 'Are you sure you want to discard your changes?' }, class: 'button button--danger' %>
      <% end %>
    </div>
    <div class="admin-form__buttons admin-form__buttons--safe">
    <%= f.submit 'Save changes', class: 'button button--success' %>
    </div>
  </div>
<% end %>
