<%= form_for([:admin, @entry], html: { multipart: true, 'data-controller': 'entry-form', 'data-entry-form-photo-endpoint': photo_admin_entries_path, 'data-action': 'submit->entry-form#submit' }) do |f| %>

<div class="field is-horizontal">
  <div class="field-label">
    <%= f.label :photos, 'Photos', class: 'label' %>
    <%= link_to 'Add', '#', class: 'button', 'data-action': 'click->entry-form#addPhoto' %>
  </div>
  <div class="field-body">
    <div class="field is-extended">
      <div data-target="entry-form.photos">
        <%= f.fields_for :photos do |p| %>
          <div class="box draggable-source" data-controller="entry-form-photo" data-entry-form-photo-empty="0" data-entry-form-photo-focal-x="<%= p.object.focal_x %>" data-entry-form-photo-focal-y="<%= p.object.focal_y %>">
            <div class="media" data-target="entry-form-photo.fields">
              <div class="media-left">
                <span class="icon is-small has-text-grey-light draggable-handle">
                  <i class="fas fa-arrows-alt-v"></i>
                </span>
              </div>
              <div class="media-content">
                <div class="field is-grouped is-grouped-multiline">
                  <div class="control">
                    <%= responsive_image_tag p.object, 'admin_edit', { width: 300, 'data-action': 'click->entry-form-photo#setFocalPoint load->entry-form-photo#showFocalPoint', 'data-target': 'entry-form-photo.thumbnail' } %>
                    <span class="icon is-large draggable-handle has-text-danger is-hidden focal-marker" data-target="entry-form-photo.focalmarker">
                      <i class="far fa-3x fa-circle"></i>
                    </span>
                  </div>
                  <div class="control is-expanded">
                    <%= p.text_area :caption, placeholder: 'Write a caption for this photo…', class: 'textarea' %>
                    <%= p.hidden_field :id %>
                    <%= p.hidden_field :position, 'data-position': '' %>
                    <%= p.hidden_field :_destroy, 'data-target': 'entry-form-photo.destroy' %>
                    <%= p.hidden_field :focal_x, 'data-target': 'entry-form-photo.focalx' %>
                    <%= p.hidden_field :focal_y, 'data-target': 'entry-form-photo.focaly' %>
                  </div>
                </div>
              </div>
              <div class="media-right">
                <a class="delete" data-action="click->entry-form-photo#delete"></a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <%= render partial: 'entry_fields', locals: { f: f } %>

  <hr class="hr">
  <h2 class="subtitle is-size-5-mobile">Entry options</h2>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :show_in_map, 'Show in map', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :show_in_map %>
        </div>
        <p class="help">When checked, the entry will be visible in the map, and be automatically tagged with location tags (e.g. #washington).</p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <%= f.label :invalidate_cloudfront, 'Purge from CDN', class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.check_box :invalidate_cloudfront, { checked: false } %>
        </div>
        <p class="help">Entries are currently cached for <%= distance_of_time_in_words(Time.now, Time.now + @max_age.minutes) %>. Check this option before saving to purge the entry from the CDN and make the changes visible immediately.</p>
      </div>
    </div>
  </div>

  <hr class="hr">
