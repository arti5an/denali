<% content_for :nav do %>
  <%= render partial: 'partials/admin/nav', locals: { active_nav: nil } %>
<% end %>

<%= form_for([:admin, @entry], html: { multipart: true, class: 'admin-form' }) do |f| %>
  
  <%= render partial: 'entry_fields', locals: { f: f } %>

  <div class="admin-form__photos">
    <ol class="admin-form__photos-list">
      <%= f.fields_for :photos do |p| %>
        <div class="admin-form__photo">
          <div class="admin-form__fields">
            <div class="admin-form__photo-thumb">
              <%= responsive_image_tag p.object, [300, 600, 900], "300px", { default_width: 600, quality: photoblog.photo_quality } %>
            </div>
            <div class="admin-form__photo-fields">
              <%= p.text_area :caption, placeholder: 'Write the caption of the photo hereâ€¦', class: 'admin-form__input admin-form__input--caption' %>
              <%= p.text_field :camera_list, value: p.object.camera_list.to_s, placeholder: 'Camera', class: 'admin-form__input admin-form__input--small' %>
              <%= p.text_field :lense_list, value: p.object.lense_list.to_s, placeholder: 'Lens', class: 'admin-form__input admin-form__input--small' %>
              <%= p.text_field :film_list, value: p.object.film_list.to_s, placeholder: 'Film', class: 'admin-form__input admin-form__input--small' %>
              <%= link_to 'Remove', '#', class: 'button button--danger admin-form__photo-delete js-photo-delete' %>
              <%= p.hidden_field :id %>
              <%= p.hidden_field :position, class: 'js-photo-position' %>
              <%= p.hidden_field :_destroy, class: 'js-photo-destroy' %>
            </div>
          </div>
        </div>
      <% end %>
    </ol>
    <%= link_to 'Add photo', '#', class: 'button button--default js-photo-add' %>
  </div>

  <div class="admin-form__actions">
    <div class="admin-form__buttons">
      <% if @entry.is_draft? %>
        <%= link_to 'Cancel', drafts_admin_entries_path, data: { confirm: 'Are you sure you want to discard your changes?' }, class: 'button button--danger' %>
      <% elsif @entry.is_queued? %>
        <%= link_to 'Cancel', queued_admin_entries_path, data: { confirm: 'Are you sure you want to discard your changes?' }, class: 'button button--danger' %>
      <% else %>
        <%= link_to 'Cancel', admin_entries_path, data: { confirm: 'Are you sure you want to discard your changes?' }, class: 'button button--danger' %>
      <% end %>
    </div>
    <div class="admin-form__buttons admin-form__buttons--safe">
    <%= f.submit 'Save changes', class: 'button button--success' %>
    </div>
  </div>
<% end %>
