<% content_for :nav do %>
  <%= render partial: 'partials/admin/nav', locals: { active_nav: 'published' } %>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.title %></td>
        <td>
        <% entry.photos.each do |p| %>
          <%= responsive_image_tag p, [1600, 800, 600], '(min-width: 800px) 800px, 100vw', 1600, { quality: photoblog.photo_quality } %>
        <% end %>
        </td>
        <td><%= link_to 'Edit', edit_admin_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', admin_entry_path(entry.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_admin_entry_path %>
