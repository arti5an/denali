<div class="card queue__item draggable-handle" data-queue-target="card" data-entry-id="<%= entry.id %>" data-entry-position-original="<%= entry.position %>">
  <div class="card-image">
    <% if entry.is_photo? %>
    <% photo = entry.photos.first %>
    <div class="image image-container">
      <%= responsive_image_tag(
        photo: photo,
        srcset: @srcset,
        sizes: @sizes,
        aspect_ratio: '1:1',
        html_options: {
          class: 'placeholder',
          loading: 'lazy',
          style: css_placeholder_background(photo),
          'data-controller': 'placeholder',
          'data-action': 'load->placeholder#removeBackground',
        }) %>
    </div>
    <% else %>
      <div style="padding-top:100%;background-color:#EEE;"><div>
    <% end %>
    <div class="queue__item-meta">
      <span class="is-size-7 has-text-light queue__item-timestamp" data-timestamp></span>
    </div>
  </div>
</div>
