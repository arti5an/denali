<% @count.to_i.times do |i| %>
  <%= fields_for :entry, @entry do |f| %>
    <%= f.fields_for :photos, child_index: "#{(Time.now.to_f * 1000).to_i}#{i}" do |p| %>
      <div class="admin-form__photo">
        <div class="admin-form__fields admin-form__fields--aligned">
          <%= p.url_field :source_url, placeholder: 'Paste a URL', autocomplete: 'off', class: 'admin-form__input admin-form__input--small js-photo-source-url' %>
          <span class="admin-form__fields-separator"></span>
          <%= link_to 'Add from Dropbox', '#', class: 'button button--default js-photo-dropbox' %>
          <span class="admin-form__fields-separator"></span>
          <div class="button button--default js-photo-file-button">
            Upload a file
            <%= p.file_field :source_file, accept: '.jpg,.jpeg', class: 'admin-form__input--file js-photo-source-file' %>
          </div>
          <span class="admin-form__fields-separator"></span>
          <%= link_to 'Close', '#', class: 'button button--danger js-photo-delete' %>
        </div>
        <div class="admin-form__fields admin-form__fields--hidden">
          <img class="admin-form__photo-thumb js-photo-thumb" />
          <div class="admin-form__photo-fields">
            <%= p.text_area :caption, placeholder: 'Write a caption for this photoâ€¦', class: 'admin-form__input admin-form__input--caption' %>
            <%= link_to 'Delete', '#', class: 'button button--danger admin-form__photo-delete js-photo-delete' %>
            <%= p.hidden_field :position, class: 'js-photo-position' %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
