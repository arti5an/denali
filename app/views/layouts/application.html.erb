<!DOCTYPE html>
<html lang="en">
<head>
  <%= render partial: 'partials/meta_tags' %>
  <%= yield :meta %>
  <% if @has_visited || !content_for?(:inline_css) %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  <% else %>
    <%= yield :inline_css %>
    <%= content_tag :link, nil, href: asset_url('application.css'), as: :style, rel: :preload, onload: "this.rel='stylesheet'".html_safe %>
  <% end %>
  <%= yield :stylesheets %>
  <% if content_for? :javascript %>
    <%= yield :javascript %>
  <% else %>
    <%= javascript_include_tag 'application', defer: true %>
  <% end %>
  <% if content_for? :typekit %>
    <%= yield :typekit %>
  <% else %>
    <% if ENV['typekit_light_id'].present? %>
      <%= render partial: 'partials/typekit', locals: { typekit_id: ENV['typekit_light_id']} %>
    <% elsif ENV['typekit_id'].present? %>
      <%= render partial: 'partials/typekit', locals: { typekit_id: ENV['typekit_id']} %>
    <% end %>
  <% end %>
  <%= @photoblog.analytics_code.try(:html_safe) %>
</head>
<body>
<%= render partial: 'partials/header.html.erb', locals: { is_minimal: @minimal_header } %>
<%= yield %>
<%= render partial: 'partials/footer.html.erb' unless @hide_footer %>
</body>
</html>
