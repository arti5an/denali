<!DOCTYPE html>
<html lang="en">
<head>
  <%= render partial: 'partials/meta_tags' %>
  <%= yield :meta %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag 'application/image_zoom', async: true %>
  <%= javascript_include_tag 'application/lazy_load', async: true %>
  <%= render partial: 'partials/typekit', locals: { kit_id: ENV['typekit_id'] } if ENV['typekit_id'].present? %>
  <%= render partial: 'partials/analytics' if Rails.env.production? && ENV['analytics_id'].present? %>
</head>
<body>
<%= render partial: 'partials/header.html.erb' %>
<%= yield %>
<%= render partial: 'partials/footer.html.erb' %>
</body>
</html>
