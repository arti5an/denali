<p>
  <%= entry.user.name %>
  <% if entry.is_published? %>
    published
  <% elsif entry.is_queued? %>
    queued
  <% elsif entry.is_draft? %>
    drafted
  <% else %>
    updated
  <% end %>

  <% if entry.is_text? %>
    this article
  <% elsif entry.is_photoset? %>
    these photos
  <% elsif entry.is_photo? %>
    this photo
  <% end %>
  on
  <% if entry.is_published? %>
    <%= link_to entry.published_at.strftime('%B %-d, %Y'), entry.permalink_url %>
  <% else %>
    <%= link_to entry.updated_at.strftime('%B %-d, %Y'), admin_preview_entry_url(entry) %>
  <% end %>
</p>
