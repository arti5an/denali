<% cache entry do %>
  <% photo = entry.photos.first %>
  <li class="entry-list__item" role="article">
    <a class="entry-list__link entry-list__link--amp" href="<%= entry.permalink_url %>">
      <figure class="entry-list__photo">
        <%= amp_image_tag photo, 'entry_list_square', { width: 1, height: 1, class: 'entry-list__image', alt: photo.alt_text } %>
        <%= render partial: 'entries/grid/caption.html.erb', object: entry, as: :entry %>
      </figure>
    </a>
  </li>
<% end %>
