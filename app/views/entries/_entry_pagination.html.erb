<% cache "entry/pagination/#{@photoblog.id}/#{@photoblog.updated_at.to_i}/#{entry_pagination.id}/#{entry_pagination.updated_at.to_i}" do %>
  <nav class="pagination">
    <span class="pagination__link">
      <% if entry_pagination == Entry.published.first %>
        <%= t('views.pagination.newest').html_safe %>
      <% else %>
        <%= link_to t('views.pagination.newest').html_safe, permalink_url(Entry.published.first) %>
      <% end %>
    </span>

    <span class="pagination__link">
      <% if entry_pagination.newer.nil? %>
        <%= t('views.pagination.newer').html_safe %>
      <% else %>
        <%= link_to t('views.pagination.newer').html_safe, permalink_url(entry_pagination.newer), :rel => 'prev' %>
      <% end %>
    </span>

    <span class="pagination__link">
      <% if entry_pagination.older.nil? %>
        <%= t('views.pagination.older').html_safe %>
      <% else %>
        <%= link_to t('views.pagination.older').html_safe, permalink_url(entry_pagination.older), :rel => 'next' %>
      <% end %>
    </span>

    <span class="pagination__link">
      <% if entry_pagination == Entry.published.last %>
        <%= t('views.pagination.oldest').html_safe %>
      <% else %>
        <%= link_to t('views.pagination.oldest').html_safe, permalink_url(Entry.published.last) %>
      <% end %>
    </span>
  </nav>
<% end %>
