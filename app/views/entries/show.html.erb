<% content_for :meta do %>
  <%= render partial: 'entries/entry_meta', object: @entry, as: :entry %>
<% end %>

<% content_for :typekit do %>
  <%= render partial: 'partials/typekit', locals: { typekit_id: ENV['typekit_body_id'] } if ENV['typekit_body_id'].present? && @entry.body.present? %>
<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'components/header', media: 'all' %>
  <%= stylesheet_link_tag 'components/entry', media: 'all' %>
  <%= stylesheet_link_tag 'components/exif', media: 'all' %>
  <%= stylesheet_link_tag 'components/tags', media: 'all' %>
  <%= stylesheet_link_tag 'components/entry_list', media: 'all' %>
  <%= stylesheet_link_tag 'components/pagination', media: 'all' %>
  <%= stylesheet_link_tag 'components/elsewhere', media: 'all' %>
  <%= stylesheet_link_tag 'components/footer', media: 'all' %>
<% end %>

<%= render partial: 'entries/entry_photo', object: @entry, as: :entry if @entry.is_photo? %>
<%= render partial: 'entries/entry_text', object: @entry, as: :entry if @entry.is_text? %>
<%= render partial: 'entries/entry_pagination', object: @entry, as: :entry %>
<%= render partial: 'entries/related', object: @entry if @photoblog.show_related_entries? %>
<%= render partial: 'partials/elsewhere' %>
