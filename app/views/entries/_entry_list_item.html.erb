<% cache "entry/list/#{entry_list_item.id}/#{entry_list_item.updated_at.to_i}" do %>
  <li class="entry-list__item">
    <a class="entry-list__link <%= entry_list_item.is_photo? ? 'entry-list__link--photo' : 'entry-list__link--text' %>" href="<%= permalink_url(entry_list_item) %>">
      <% if entry_list_item.is_photo? %>
        <figure class="entry-list__photo">
          <%= responsive_image_tag entry_list_item.photos.first,
                  'entry_list_item',
                  { class: 'entry-list__image', alt: entry_list_item.photos.first.caption.blank? ? entry_list_item.title : entry_list_item.photos.first.plain_caption } %>
          <figcaption class="entry-list__photo-title">
            <%= raw entry_list_item.formatted_title %>
          </figcaption>
        </figure>
      <% else %>
        <h2><%= entry_list_item.formatted_title %></h2>
        <%= simple_format(truncate(entry_list_item.plain_body, length: 1200, omission: 'â€¦')) %>
      <% end %>
    </a>
  </li>
<% end %>
