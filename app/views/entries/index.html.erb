<% content_for :link_tags do %>
  <%= tag :link, rel: 'preconnect', href: "https://#{ENV['imgix_domain']}" %>
  <%= tag :link, rel: 'preload', as: 'style', href: stylesheet_url('application') %>
<% end %>


<% content_for :head do %>
  <%= render partial: 'entries/list/head' %>
<% end %>

<% content_for :inline_css do %>
  <%= render partial: 'partials/inline_styles', locals: { stylesheet: 'entry_list.css' } %>
<% end %>

<% content_for :javascript do %>
  <%= javascript_pack_tag 'entry_list', defer: true %>
<% end %>

<%= render partial: 'entries/list/body' %>
