<% cache [@photoblog, @profile] do %>
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" xmlns:webfeeds="http://webfeeds.org/rss/1.0">
  <id><%= atom_tag(profile_url(username: @profile.username), @entries.map(&:modified_at).max) %></id>
  <title><%= "Photos by #{@profile.name} - #{@photoblog.name}" %></title>
  <subtitle><%= @photoblog.tag_line %></subtitle>
  <link rel="alternate" type="text/html" href="<%= profile_url(username: @profile.username) %>"/>
  <link rel="self" type="application/atom+xml" href="<%= profile_feed_url(username: @profile.username, format: 'atom') %>"/>
  <updated><%= @entries.map(&:modified_at).max.utc.strftime('%FT%TZ') %></updated>
  <webfeeds:accentColor>#BF0222</webfeeds:accentColor>
  <% if @photoblog.logo.attached? %>
    <webfeeds:wordmark><%= @photoblog.logo_url(w: 192) %></webfeeds:wordmark>
  <% end %>
  <% if @photoblog.touch_icon.attached? %>
    <webfeeds:icon><%=  @photoblog.touch_icon_url(w: 192) %></webfeeds:icon>
  <% end %>
  <webfeeds:related layout="card" target="browser"/>
  <category term="photography" label="Photography" />
  <%= render partial: 'entries/feed/entry', formats: :atom, collection: @entries, as: :entry, cached: true %>
</feed>
<% end %>
