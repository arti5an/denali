<% cache @photoblog do %>
<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <% @pages.times do |page| %>
    <sitemap>
      <loc><%= sitemap_url(page: page + 1) %></loc>
      <lastmod><%= @photoblog.entries.published('published_at ASC').page(page + 1).per(@entries_per_sitemap).pluck(:modified_at).max.strftime('%Y-%m-%dT%H:%M:%S%:z') %></lastmod>
    </sitemap>
  <% end %>
</sitemapindex>
<% end %>
