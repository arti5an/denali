<% cache entry do %>
  <% photo = entry.photos.first %>
  <li class="entry-list__item" role="article">
    <div class="entry-list__wrapper entry-list__wrapper--square">
      <a class="entry-list__link" href="<%= entry.permalink_url %>">
        <figure class="entry-list__photo">
          <%= lazy_responsive_image_tag photo,
                  'entry_list_square',
                  { class: 'entry-list__image', alt: photo.alt_text } %>
          <%= render partial: 'entries/shared/entry_list_item_caption.html.erb', locals: { entry: entry, photo: photo } %>
        </figure>
      </a>
    </div>
  </li>
<% end %>
