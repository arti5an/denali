<aside class="elsewhere" aria-labelledby="elsewhere">
  <h2 class="elsewhere__heading" id="elsewhere">Elsewhere on the Web</h2>
  <ul class="elsewhere__list">
    <li class="elsewhere__item"><a href="<%= feed_url %>" title="Subscribe to Feed" aria-label="Subscribe to Feed"><%= inline_svg :feed, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Feed</span></a></li>
    <% if @profile.flickr.present? %>
      <li class="elsewhere__item"><a href="<%= @profile.flickr %>" rel="me" title="Follow on Flickr" aria-label="Follow on Flickr"><%= inline_svg :flickr, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Flickr</span></a></li>
    <% end %>
    <% if @profile.instagram.present? %>
      <li class="elsewhere__item"><a href="<%= @profile.instagram %>" rel="me" title="Follow on Instagram" aria-label="Follow on Instagram"><%= inline_svg :instagram, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Instagram</span></a></li>
    <% end %>
    <% if @profile.tumblr.present? %>
      <li class="elsewhere__item"><a href="<%= @profile.tumblr %>" rel="me" title="Follow on Tumblr" aria-label="Follow on Tumblr"><%= inline_svg :tumblr, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Tumblr</span></a></li>
    <% end %>
  </ul>
</aside>

