<ul class="follow">
  <%= render partial: 'partials/follow_icon', locals: { url: about_url,                           icon: 'about',     label: "About #{@photoblog.name}" } %>
  <%= render partial: 'partials/follow_icon', locals: { url: search_url,                          icon: 'search',    label: "Search #{@photoblog.name}" } if @photoblog.show_search? && @photoblog.has_search? %>
  <%= render partial: 'partials/follow_icon', locals: { url: "mailto:#{@profile.email}",        icon: 'email',     label: 'Contact by email' }          if @profile.email.present? %>
  <%= render partial: 'partials/follow_icon', locals: { url: feed_url(format: 'atom', page: nil), icon: 'feed',      label: 'Subscribe to Feed' } %>
  <%= render partial: 'partials/follow_icon', locals: { url: @profile.flickr,                   icon: 'flickr',    label: 'Follow on Flickr' }          if @profile.flickr.present? %>
  <%= render partial: 'partials/follow_icon', locals: { url: @profile.instagram,                icon: 'instagram', label: 'Follow on Instagram' }       if @profile.instagram.present? %>
  <%= render partial: 'partials/follow_icon', locals: { url: @profile.tumblr,                   icon: 'tumblr',    label: 'Follow on Tumblr' }          if @profile.tumblr.present? %>
</ul>
