<nav class="navbar is-fixed-top" data-controller="nav">
  <% if @photoblog.header_logo_svg.present? %>
    <div class="navbar-brand">
      <a href="<%= root_path %>" class="navbar-item logo">
        <%= @photoblog.header_logo_svg.html_safe %>
      </a>
      <a role="button" class="navbar-burger" data-action="click->nav#toggle" data-target="nav.burger">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
  <% end %>
  <div class="navbar-menu" data-target="nav.menu">
    <div class="navbar-start">
      <a href="<%= new_admin_entry_path %>" class="navbar-item">New entry</a>
      <a href="<%= admin_entries_path %>" class="navbar-item">Published</a>
      <a href="<%= queued_admin_entries_path %>" class="navbar-item">Queued</a>
      <a href="<%= drafts_admin_entries_path %>" class="navbar-item">Drafts</a>
