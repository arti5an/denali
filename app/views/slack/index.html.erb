<% content_for :meta do %>
  <title>Add <%= @photoblog.name %> to Slack</title>
  <meta name="description" content="Get notified in Slack when a new photo is published to <%= @photoblog.name %>." />
  <link rel="canonical" href="<%= slack_url %>">

  <meta property="og:title" content="Add <%= @photoblog.name %> to Slack" />
  <meta property="og:image" content="<%= image_url 'slack-facebook.png' %>" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:description" content="Get notified in Slack when a new photo is published to <%= @photoblog.name %>." />
  <meta property="og:url" content="<%= slack_url %>" />
  <meta property="og:type" content="Website" />
  <meta property="og:site_name" content="<%= @photoblog.name %>" />
  <meta property="og:locale" content="en_US" />

  <meta name="twitter:site" content="@gesteves">
  <meta name="twitter:creator" content="@gesteves">
  <meta name="twitter:title" content="Add <%= @photoblog.name %> to Slack">
  <meta name="twitter:url" content="<%= slack_url %>" />
  <meta name="twitter:description" content="Get notified in Slack when a new photo is published to <%= @photoblog.name %>.">
  <meta name="twitter:image" content="<%= image_url 'slack-facebook.png'  %>">
  <meta name="twitter:card" content="summary_large_image">
<% end %>

<article class="entry entry--text">

  <div class="entry__body">
    <h1 class="entry__headline">
      Add <%= @photoblog.name %> to Slack
    </h1>

    <% if @added %>
      <p>Thanks! You’ll get notifications in the <i><%= @webhook.channel %></i> channel of <i><%= @webhook.team_name %></i> when new photos are published. Have a nice day!</p>
    <% else %>
      <%= content_tag :img, nil, src: image_url('slack.png'), srcset: "#{image_url('slack.png')} 1x, #{image_url('slack@2x.png')} 2x" %>
      <p>Get notifications in your team’s <a href="https://slack.com/">Slack</a> whenever new photos are published! Just tap this button to get&nbsp;started:</p>
      <a class="follow__slack" href="https://slack.com/oauth/authorize?scope=incoming-webhook&amp;client_id=20888890816.21290100946&amp;state=<%= @state %>&amp;redirect_uri=<%= slack_url %>"><img alt="Add to Slack" height="40" width="139" src="https://platform.slack-edge.com/img/add_to_slack.png" srcset="https://platform.slack-edge.com/img/add_to_slack.png 1x, https://platform.slack-edge.com/img/add_to_slack@2x.png 2x"></a>
      <p class="entry__disclaimer">Adding <i><%= @photoblog.name %></i> to your Slack will only give it permission to post to a single channel of your choice. No private information (such as your messages, channels, or users) will be accessed or&nbsp;stored.</p>
    <% end %>

  </div>
</article>
